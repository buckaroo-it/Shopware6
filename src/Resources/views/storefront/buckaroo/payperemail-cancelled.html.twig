{% sw_extends '@Storefront/storefront/base.html.twig' %}

{% block base_content %}
    <div class="container payperemail-cancelled">
        <div class="row justify-content-center">
            <div class="col-md-8 col-lg-6">
                <div class="card mt-5 mb-5">
                    <div class="card-body text-center p-5">
                        {# Warning Icon #}
                        <div class="mb-4">
                            <svg xmlns="http://www.w3.org/2000/svg" width="80" height="80" fill="currentColor" class="bi bi-x-circle text-warning" viewBox="0 0 16 16">
                                <path d="M8 15A7 7 0 1 1 8 1a7 7 0 0 1 0 14zm0 1A8 8 0 1 0 8 0a8 8 0 0 0 0 16z"/>
                                <path d="M4.646 4.646a.5.5 0 0 1 .708 0L8 7.293l2.646-2.647a.5.5 0 0 1 .708.708L8.707 8l2.647 2.646a.5.5 0 0 1-.708.708L8 8.707l-2.646 2.647a.5.5 0 0 1-.708-.708L7.293 8 4.646 5.354a.5.5 0 0 1 0-.708z"/>
                            </svg>
                        </div>

                        {# Cancelled message #}
                        <h1 class="h3 mb-3">{{ 'buckaroo.payperemail.payment_cancelled'|trans|default('Payment Cancelled') }}</h1>
                        
                        <p class="text-muted mb-4">
                            {{ 'buckaroo.payperemail.payment_not_completed'|trans|default('The payment was not completed. Your order is still pending.') }}
                        </p>

                        {# Order details #}
                        <div class="alert alert-warning mb-4">
                            <strong>{{ 'buckaroo.payperemail.order_number'|trans|default('Order number') }}:</strong> {{ orderNumber }}
                        </div>

                        {# Additional info #}
                        <p class="small text-muted mb-4">
                            {{ 'buckaroo.payperemail.can_retry'|trans|default('You can complete the payment later from your account or contact us for assistance.') }}
                        </p>

                        {# Action buttons #}
                        <div class="d-flex flex-column gap-2">
                            <a href="{{ path('frontend.home.page') }}" class="btn btn-primary">
                                {{ 'buckaroo.payperemail.back_to_shop'|trans|default('Back to Shop') }}
                            </a>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
{% endblock %}

