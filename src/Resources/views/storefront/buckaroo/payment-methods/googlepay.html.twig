{% block buckaroo_payment_method_googlepay %}
    <div class="buckaroo-googlepay-container">
        <div id="buckaroo-googlepay-button" class="buckaroo-googlepay-button"></div>
    </div>

    <script>
        document.addEventListener('DOMContentLoaded', function() {
            if (window.google && google.payments) {
                const button = document.getElementById('buckaroo-googlepay-button');
                if (button) {
                    button.style.display = 'block';
                }
            }
        });
    </script>
{% endblock %} 