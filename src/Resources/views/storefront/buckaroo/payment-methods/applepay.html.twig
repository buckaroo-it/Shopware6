{% block buckaroo_payment_method_applepay %}
    <div class="buckaroo-applepay-container">
        <div id="buckaroo-applepay-button" class="buckaroo-applepay-button"></div>
    </div>

    <script>
        document.addEventListener('DOMContentLoaded', function() {
            if (window.ApplePaySession && ApplePaySession.canMakePayments()) {
                const button = document.getElementById('buckaroo-applepay-button');
                if (button) {
                    button.style.display = 'block';
                }
            }
        });
    </script>
{% endblock %} 