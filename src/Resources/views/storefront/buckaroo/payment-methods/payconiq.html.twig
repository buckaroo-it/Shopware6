{% block buckaroo_payment_method_payconiq %}
    <div class="buckaroo-payconiq-container">
        <div id="buckaroo-payconiq-button" class="buckaroo-payconiq-button"></div>
    </div>

    <script>
        document.addEventListener('DOMContentLoaded', function() {
            if (window.Payconiq) {
                const button = document.getElementById('buckaroo-payconiq-button');
                if (button) {
                    button.style.display = 'block';
                }
            }
        });
    </script>
{% endblock %} 