{% block buckaroo_payment_method_billink %}
    <div class="form-group">
        <label class="form-label" for="buckaroo-billink-gender">
            {{ "buckaroo.payment.billink.gender"|trans|sw_sanitize }}
        </label>
        <select class="form-select" id="buckaroo-billink-gender" name="buckaroo-billink-gender" required="required">
            <option value="">{{ "buckaroo.payment.billink.select_gender"|trans|sw_sanitize }}</option>
            <option value="1">{{ "buckaroo.payment.billink.gender_male"|trans|sw_sanitize }}</option>
            <option value="2">{{ "buckaroo.payment.billink.gender_female"|trans|sw_sanitize }}</option>
        </select>
    </div>

    <div class="form-group">
        <label class="form-label" for="buckaroo-billink-birthdate">
            {{ "buckaroo.payment.billink.birthdate"|trans|sw_sanitize }}
        </label>
        <input type="date" class="form-control" id="buckaroo-billink-birthdate" name="buckaroo-billink-birthdate" required="required">
    </div>

    <div class="form-group">
        <label class="form-label" for="buckaroo-billink-phone">
            {{ "buckaroo.payment.billink.phone"|trans|sw_sanitize }}
        </label>
        <input type="tel" class="form-control" id="buckaroo-billink-phone" name="buckaroo-billink-phone" required="required">
    </div>
{% endblock %} 