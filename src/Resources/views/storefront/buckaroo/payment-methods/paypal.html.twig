{% block buckaroo_payment_method_paypal %}
    <div class="buckaroo-paypal-container">
        <div id="buckaroo-paypal-button" class="buckaroo-paypal-button"></div>
    </div>

    <script>
        document.addEventListener('DOMContentLoaded', function() {
            if (window.paypal) {
                const button = document.getElementById('buckaroo-paypal-button');
                if (button) {
                    button.style.display = 'block';
                }
            }
        });
    </script>
{% endblock %} 