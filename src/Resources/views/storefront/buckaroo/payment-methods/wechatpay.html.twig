{% block buckaroo_payment_method_wechatpay %}
    <div class="buckaroo-wechatpay-container">
        <div id="buckaroo-wechatpay-qr" class="buckaroo-wechatpay-qr"></div>
    </div>

    <script>
        document.addEventListener('DOMContentLoaded', function() {
            if (window.WeChatPay) {
                const qrContainer = document.getElementById('buckaroo-wechatpay-qr');
                if (qrContainer) {
                    qrContainer.style.display = 'block';
                }
            }
        });
    </script>
{% endblock %} 