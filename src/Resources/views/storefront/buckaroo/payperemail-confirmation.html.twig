{% sw_extends '@Storefront/storefront/base.html.twig' %}

{% block base_content %}
    <div class="container payperemail-confirmation">
        <div class="row justify-content-center">
            <div class="col-md-8 col-lg-6">
                <div class="card mt-5 mb-5">
                    <div class="card-body text-center p-5">
                        {# Success Icon #}
                        <div class="mb-4">
                            <svg xmlns="http://www.w3.org/2000/svg" width="80" height="80" fill="currentColor" class="bi bi-check-circle text-success" viewBox="0 0 16 16">
                                <path d="M8 15A7 7 0 1 1 8 1a7 7 0 0 1 0 14zm0 1A8 8 0 1 0 8 0a8 8 0 0 0 0 16z"/>
                                <path d="M10.97 4.97a.235.235 0 0 0-.02.022L7.477 9.417 5.384 7.323a.75.75 0 0 0-1.06 1.06L6.97 11.03a.75.75 0 0 0 1.079-.02l3.992-4.99a.75.75 0 0 0-1.071-1.05z"/>
                            </svg>
                        </div>

                        {# Thank you message #}
                        <h1 class="h3 mb-3">{{ 'buckaroo.payperemail.thank_you'|trans|default('Thank you for your payment!') }}</h1>
                        
                        <p class="text-muted mb-4">
                            {{ 'buckaroo.payperemail.payment_received'|trans|default('Your payment has been received and your order is being processed.') }}
                        </p>

                        {# Order details #}
                        <div class="alert alert-info mb-4">
                            <strong>{{ 'buckaroo.payperemail.order_number'|trans|default('Order number') }}:</strong> {{ orderNumber }}
                        </div>

                        {# Additional info #}
                        <p class="small text-muted mb-4">
                            {{ 'buckaroo.payperemail.confirmation_email'|trans|default('A confirmation email will be sent to you shortly with the order details.') }}
                        </p>

                        {# Action buttons #}
                        <div class="d-flex flex-column gap-2">
                            {% if orderDeepLink %}
                                <a href="{{ path('frontend.account.order.single.page', { 'deepLinkCode': orderDeepLink }) }}" 
                                   class="btn btn-primary">
                                    {{ 'buckaroo.payperemail.view_order'|trans|default('View Order Details') }}
                                </a>
                            {% endif %}
                            
                            <a href="{{ path('frontend.home.page') }}" class="btn btn-outline-primary">
                                {{ 'buckaroo.payperemail.continue_shopping'|trans|default('Continue Shopping') }}
                            </a>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
{% endblock %}

