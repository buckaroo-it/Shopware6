{% block page_checkout_summary_buckaroo_fee %}
    {% if page.extensions.buckaroo.buckarooFee > 0 %}
        <dt class="col-7 checkout-aside-summary-label">
            {{ "buckaroo.fee"|trans|sw_sanitize }}
        </dt>
        <dd class="col-5 checkout-aside-summary-value">
            {{ page.extensions.buckaroo.buckarooFee|currency }}{{ "general.star"|trans|sw_sanitize }}
        </dd>
    {% endif %}

    {% if page.order.customFields.buckarooFee > 0 %}
    <dt class="col-7 checkout-aside-summary-label">
            {{ "buckaroo.fee"|trans|sw_sanitize }}
        </dt>
        <dd class="col-5 checkout-aside-summary-value">
            {{ page.order.customFields.buckarooFee|currency }}{{ "general.star"|trans|sw_sanitize }}
        </dd>
    {% endif %}
{% endblock %}
