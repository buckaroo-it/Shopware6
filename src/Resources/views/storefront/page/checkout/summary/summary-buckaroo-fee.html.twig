{% block page_checkout_summary_buckaroo_fee %}


    {% set buckarooFee = page.extensions.buckaroo.buckarooFee  %}
    {% set buckarooFeeRaw = page.extensions.buckaroo.buckarooFeeRaw ?? null %}
    {% set buckarooFeeIsPercentage = page.extensions.buckaroo.buckarooFeeIsPercentage ?? false %}
    {% if page.extensions.buckaroo === null %}
        {% set buckarooFee = page.order.customFields.buckarooFee  %}
    {% endif %}
    {% if buckarooFee > 0 %}
    <dt class="col-7 checkout-aside-summary-label">
            {{ "buckaroo.fee"|trans|sw_sanitize }}
        </dt>
        <dd class="col-5 checkout-aside-summary-value">
            {% if buckarooFeeIsPercentage and buckarooFeeRaw %}
                {{ buckarooFee|currency }} ({{ buckarooFeeRaw }}){{ "general.star"|trans|sw_sanitize }}
            {% else %}
                {{ buckarooFee|currency }}{{ "general.star"|trans|sw_sanitize }}
            {% endif %}
        </dd>
    {% endif %}
{% endblock %}
